@model Ekip2.Presentation.Areas.Manager.Models.LeaveVMs.LeaveCreateVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <h1 class="custom-page-title">@Localizer["CreateNewLeave"]</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" class="custom-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <label asp-for="StartDate" class="col-sm-3 col-form-label">@Localizer["StartDate"]</label>
                    <div class="col-sm-9">
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="EndDate" class="col-sm-3 col-form-label">@Localizer["EndDate"]</label>
                    <div class="col-sm-9">
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="LeaveTypeId" class="col-sm-3 col-form-label">@Localizer["LeaveType"]</label>
                    <div class="col-sm-9">
                        <select asp-for="LeaveTypeId" asp-items="@Model.LeaveTypes" class="form-control">
                            <option value="">--- Select ---</option>
                        </select>
                        <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ManagerId" class="col-sm-3 col-form-label">@Localizer["Employees"]</label>
                    <div class="col-sm-9">
                        <select asp-for="ManagerId" asp-items="@Model.Managers" class="form-control">
                            <option value="">--- Select ---</option>
                        </select>
                        <span asp-validation-for="ManagerId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <div class="col-sm-9">
                        <input type="submit" value="@Localizer["Create"]" class="btn custom-btn custom-btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container mt-3 text-center">
    <a asp-action="Index" class="btn custom-btn custom-btn-secondary">@Localizer["BackToList"]</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background: #eee;
    }

    .custom-page-title {
        color: #8E24AA;
        text-align: center;
        margin-bottom: 30px;
        font-size: 2em;
    }

    .container {
        margin-top: 50px;
    }

    .custom-form {
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .col-form-label {
        font-weight: bold;
        color: #8E24AA;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .custom-btn {
        text-decoration: none;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 25px;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

    .custom-btn-primary {
        background-color: #8E24AA;
        border: 1px solid #8E24AA;
        color: white;
    }

        .custom-btn-primary:hover {
            background-color: #6D1A9D;
            border: 1px solid #6D1A9D;
        }

    .custom-btn-secondary {
        background-color: #6C757D;
        border: 1px solid #6C757D;
        color: white;
    }

        .custom-btn-secondary:hover {
            background-color: #5A6369;
            border: 1px solid #5A6369;
        }
</style>

<script>
    function validatePhoneNumber(input) {
        input.value = input.value.replace(/[^0-9]/g, '');
    }
</script>