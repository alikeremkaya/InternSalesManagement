@using Ekip2.Domain.Enums

@model IEnumerable<Ekip2.Presentation.Areas.Manager.Models.AdvanceVMs.AdvanceListVM>



@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: #eee;
    }

    .container {
        margin-top: 50px;
    }

    .page-title {
        color: #8E24AA;
        text-align: center;
        margin-bottom: 30px;
        font-size: 2em;
    }

    .btn-create {
        text-decoration: none;
        color: white;
        font-weight: bold;
        background-color: #8E24AA;
        padding: 10px 20px;
        border-radius: 25px;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

        .btn-create:hover {
            background-color: #6D1A9D;
        }

    .table-custom-container {
        margin-top: 20px;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        background-color: white;
    }

    .table-custom {
        width: 100%;
        border-collapse: collapse;
    }

        .table-custom th,
        .table-custom td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
            text-align: left;
        }

        .table-custom thead th {
            background-color: #8E24AA;
            color: white;
            border-bottom: 2px solid #6D1A9D;
        }

    .action-links {
        display: flex;
        gap: 10px;
    }

    .btn-update,
    .btn-delete,
    .btn-approve,
    .btn-reject {
        text-decoration: none;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

    .btn-update {
        background-color: #8E24AA;
        border: 1px solid #8E24AA;
    }

    .btn-delete {
        background-color: #EE7B11;
        border: 1px solid #EE7B11;
    }

    .btn-approve {
        background-color: #28a745;
        border: 1px solid #28a745;
    }

    .btn-reject {
        background-color: #dc3545;
        border: 1px solid #dc3545;
    }

        .btn-update:hover,
        .btn-delete:hover,
        .btn-approve:hover,
        .btn-reject:hover {
            background-color: #6D1A9D;
        }

    .image-container {
        display: flex;
        align-items: center;
    }

    .image-placeholder {
        color: red;
        font-weight: bold;
        margin: 0;
    }

    .image-preview {
        height: 50px;
        width: auto;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin-left: 10px;
        cursor: pointer;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background-color: #fff;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
        max-width: 500px;
        border-radius: 8px;
        position: relative;
    }

        .modal-content img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }

    .modal-close {
        position: absolute;
        top: 10px;
        right: 10px;
        color: #000;
        font-size: 30px;
        font-weight: bold;
        transition: 0.3s;
        cursor: pointer;
    }

        .modal-close:hover,
        .modal-close:focus {
            color: #bbb;
            text-decoration: none;
            cursor: pointer;
        }
</style>

<div class="container mt-5">
    <h1 class="page-title">@Localizer["Advances"]</h1>

    @* <p class="text-center">
        <a asp-action="Create" class="btn btn-create">@Localizer["CreateAdvance"]</a>
    </p> *@
    <br />
    <br />
    <div class="card-deck">
        @foreach (var item in Model)
        {
            <div class="card mb-4 advance-card">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Amount)</h5>
                    <p class="card-text">@Localizer["AdvanceDate"]: @item.AdvanceDate.ToShortDateString()</p>
                    <div class="image-container">
                        @if (item.Image is null)
                        {
                            <p class="image-placeholder">@Localizer["NoImagePleaseAdd"]</p>
                        }
                        else
                        {
                            <img class="image-preview" src="@($"data:image/png;base64,{Convert.ToBase64String(item.Image)}")" onclick="openModal(this.src)" />
                        }
                    </div>
                    <p class="card-text">@Localizer["Employee"]: @item.ManagerFirstName @item.ManagerLastName</p>
                    <p class="card-text">@Localizer["Role"]: @item.Roles</p>
                    <p class="card-text">@Localizer["Advance Status"]: @item.AdvanceStatus</p>
                </div>
                <div class="card-footer">
                    <div class="action-links">

                        @if (item.AdvanceStatus == AdvanceStatus.Pending)
                        {
                            <form method="post" asp-action="Approve" asp-route-id="@item.Id" style="display:inline;">
                                <button type="submit" class="btn btn-approve">@Localizer["Approve"]</button>
                            </form>
                            <form method="post" asp-action="Reject" asp-route-id="@item.Id" style="display:inline;">
                                <button type="submit" class="btn btn-reject">@Localizer["Reject"]</button>
                            </form>
                        }
                        else if (item.AdvanceStatus == AdvanceStatus.Approved || item.AdvanceStatus == AdvanceStatus.Rejected)
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this advance?')">@Localizer["Delete"]</a>
                        }




                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .advance-card {
        transition: transform 0.2s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .advance-card:hover {
            transform: translateY(-5px); /* Kartı yukarı doğru hareket ettiren animasyon */
        }

    .card-deck {
        display: flex;
        flex-wrap: wrap;
        margin-right: -15px;
        margin-left: -15px;
    }

    .card {
        flex: 1 0 0%;
        margin-right: 15px;
        margin-left: 15px;
        border: 1px solid rgba(0, 0, 0, 0.125);
        border-radius: 0.25rem;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-body {
        flex: 1 1 auto;
    }

    .image-container {
        flex-shrink: 0; /* Fotoğrafın içeri sığmasını sağlar */
        text-align: center;
        margin-bottom: 1rem;
    }

    .image-placeholder {
        color: #999;
    }

    .image-preview {
        max-width: 100%;
        max-height: 100px; /* Maksimum yükseklik ayarı */
        height: auto;
        cursor: pointer;
    }
</style>

<div id="imageModal" class="modal">
    <div class="modal-content" onclick="event.stopPropagation()">
        <span class="modal-close" onclick="closeModal('imageModal')">&times;</span>
        <img id="modal-image">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function openModal(src) {
            var modal = document.getElementById("imageModal");
            var modalImage = document.getElementById("modal-image");
            modal.style.display = "flex";
            modalImage.src = src;
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = "none";
        }

        window.onclick = function (event) {
            var imageModal = document.getElementById("imageModal");
            if (event.target === imageModal) {
                closeModal('imageModal');
            }
        }
    </script>
}
